<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <FrameLayout
        android:id="@+id/fram"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/space"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="hello"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </FrameLayout>

    <LinearLayout
        app:layout_constraintBottom_toTopOf="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btn1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="8dp"
            android:background="@drawable/oval_shape_2"
            android:drawableLeft="@drawable/ic_take_photo"
            android:visibility="visible"/>
        <Button
            android:id="@+id/btn2"
            android:layout_marginLeft="25dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:padding="7dp"
            android:background="@drawable/oval_shape_3"
            android:drawableLeft="@drawable/ic_insert_photo"
            android:visibility="visible"/>
    </LinearLayout>

    <com.luseen.spacenavigation.SpaceNavigationView
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        app:active_item_color="@color/black"
        app:centre_button_color="#039BE5"
        app:inactive_item_color="@color/white"
        app:space_background_color="#04B121"
        app:centre_button_icon="@drawable/ic_baseline_add_24"
        app:active_centre_button_background_color="#039BE5"
        app:active_centre_button_icon_color="@color/black"
        app:inactive_centre_button_icon_color="@color/white"
        app:space_item_icon_size="@dimen/space_item_icon_default_size"
        app:space_item_icon_only_size="@dimen/space_item_icon_only_size"
        app:space_item_text_size="@dimen/space_item_text_default_size">
    </com.luseen.spacenavigation.SpaceNavigationView>


</androidx.constraintlayout.widget.ConstraintLayout>